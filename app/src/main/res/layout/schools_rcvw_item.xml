<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >
        <!-- City Name -->
        <TextView
            android:id="@+id/provinceName_TxVw_Desc"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text= "@string/city_desc"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/provinceName_TxVw_CardView_SchoolRcVw"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Province Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/provinceName_TxVw_Desc"
            app:layout_constraintStart_toEndOf="@+id/gender_ImgVw_CardView_SchoolRcVw"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- School Name -->
        <TextView
            android:id="@+id/schoolName_TxVw_Desc"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/schoolName_desc"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provinceName_TxVw_CardView_SchoolRcVw"
            />

        <TextView
            android:id="@+id/schoolName_TxVw_CardView_SchoolRcVw"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="School Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/schoolName_TxVw_Desc"
            app:layout_constraintStart_toEndOf="@+id/gender_ImgVw_CardView_SchoolRcVw"
            app:layout_constraintTop_toBottomOf="@+id/provinceName_TxVw_CardView_SchoolRcVw" />
        <!-- Gender Image -->
        <ImageView
            android:id="@+id/gender_ImgVw_CardView_SchoolRcVw"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/json_tag_gender"
            />

        <!-- Fields -->
        <TextView
            android:id="@+id/fieldsName_TxVw_Desc"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/fields_desc"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolName_TxVw_CardView_SchoolRcVw"
            />

        <TextView
            android:id="@+id/fieldsName_TxVw_CardView_SchoolRcVw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:lines="2"
            android:maxLines="3"
            android:text="Fields"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/fieldsName_TxVw_Desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolName_TxVw_CardView_SchoolRcVw" />

        <!--  Address-->
        <TextView
            android:id="@+id/address_TxVw_Desc"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/address_desc"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldsName_TxVw_CardView_SchoolRcVw"
            />

        <TextView
            android:id="@+id/address_TxVw_CardView_SchoolRcVw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/address_TxVw_Desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldsName_TxVw_CardView_SchoolRcVw" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>